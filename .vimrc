set nocompatible

syntax enable
filetype plugin indent on

set colorcolumn=140

highlight CursorColumn ctermfg=None ctermbg=None
highlight CursorLine ctermfg=Cyan ctermbg=Black
highlight ColorColumn ctermfg=None ctermbg=DarkGrey

set encoding=utf-8
set fileencoding=utf-8

set showcmd
set showmode

set backspace=indent,eol,start

set hidden

set cursorline
set cursorcolumn

set wildmenu
set wildmode=list:longest

set ignorecase
set smartcase
set smartindent
set smarttab
set expandtab

"set number
set ruler

set incsearch
set hlsearch
set showmatch

set wrap
set scrolloff=3

set title

set visualbell

set nobackup
set nowritebackup

set autoindent

set tabstop=2
set shiftwidth=2
set softtabstop=2

set laststatus=2

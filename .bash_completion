if command -v kubectl >/dev/null 2>&1; then
  . <(kubectl completion bash)
fi

if command -v kustomize >/dev/null 2>&1; then
  . <(kustomize completion bash)
fi

if command -v helm >/dev/null 2>&1; then
  . <(helm completion bash)
fi

if command -v kube-capacity >/dev/null 2>&1; then
  . <(kube-capacity completion bash)
fi

if command -v k3d >/dev/null 2>&1; then
  . <(k3d completion bash)
fi

if command -v kube-linter >/dev/null 2>&1; then
  . <(kube-linter completion bash)
fi

if command -v oc >/dev/null 2>&1; then
  . <(oc completion bash)
fi

if command -v popeye >/dev/null 2>&1; then
  . <(popeye completion bash)
fi

if command -v kubespy >/dev/null 2>&1; then
  . <(kubespy completion bash)
fi

if command -v terrascan >/dev/null 2>&1; then
  . <(terrascan completion bash)
fi

if command -v helmfile >/dev/null 2>&1; then
  . <(helmfile completion bash)
fi

if command -v tfsec-checkgen >/dev/null 2>&1; then
  . <(tfsec-checkgen completion bash)
fi

if [ -f ~/.dotfiles/completion/git.bash ]; then
  . ~/.dotfiles/completion/git.bash
fi

if [ -f ~/.dotfiles/completion/kubectx.bash ]; then
  . ~/.dotfiles/completion/kubectx.bash
fi

if [ -f ~/.dotfiles/completion/kubens.bash ]; then
  . ~/.dotfiles/completion/kubens.bash
fi

if [ -f ~/.dotfiles/completion/kubetail.bash ]; then
  . ~/.dotfiles/completion/kubetail.bash
fi

complete -F __start_kubectl k
complete -F _kube_contexts kubectx kctx
complete -F _kube_namespaces kubens kns
complete -F __start_kube-capacity kc
complete -F _kubetail kubetail kt
complete -F __start_kube-linter kl
complete -F __start_popeye kp
complete -F __start_kubespy ks

complete -F __start_terrascan tfscan
complete -C ~/binaries/terraform/latest/bin/terraform terraform
complete -C ~/binaries/terraform/latest/bin/terraform tf
complete -C ~/binaries/terragrunt/latest/bin/terragrunt terragrunt
complete -C ~/binaries/terragrunt/latest/bin/terragrunt tfgrunt